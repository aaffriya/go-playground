{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Go Build & Run",
			"type": "shell",
			"command": [
				"go",
				"build",
				"-o",
				"${workspaceFolder}/bin/main",
				"&&",
				"${workspaceFolder}/bin/main"

			],
			"problemMatcher": [
				"$go"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}